# Representation of a Book that can be bought in our Shop
type Book {
  # Unique, immutable Id, that identifies this Book
  id: ID!

  # The title of the book
  title: String!

  # The Book's price
  price: String!
}

# Information about the running process
type ProcessInfo {
  name: String!
  uptime: String!
  javaVersion: String!
}

type Query {
  # Returns all books in our store
  books: [Book!]!

  # Returns some information about the running **Books** process
  ping: ProcessInfo
}